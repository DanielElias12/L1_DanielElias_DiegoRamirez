@model IEnumerable<L1_DanielElias_DiegoRamirez.Models.Player>

@{
    ViewData["Title"] = "Implementedlist";
}

<h1>Implementedlist</h1>

<p>
    <a asp-action="ImplementedListManualCreate">Create New</a>
</p>






<form method="get" asp-action="Implementedlist">
    <p>
        <input type="search" placeholder="Type name, last name, salary, or club..." value="@ViewData["GetPlayerImplemented"]" name="searched" style="width:500px;" />
        <input type="submit" value="Search" class="btn btn-outline-primary" />
        <a asp-action="Implementedlist">Show All</a>
    </p>Get

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            
            </td>
        </tr>
}
    </tbody>
</table>
