@model L1_DanielElias_DiegoRamirez.Models.Data.FileClass

<form asp-controller="Player" asp-action="ReadFile" method="post" enctype="multipart/form-data" class="mt-3">
      
    <div class="form-group row">
        <div class="col-sm-12">

            <input asp-for="csv" class="custom-file-input" placeholder="Csv File"/>
            <label class="custom-file-label">Upload file...</label>

        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-primary">Upload</button>
            </div>

        </div>

    </div>

    @section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on('change', function(){
                var filename = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(filename);

            })
        })

    </script>
    } 


</form> 